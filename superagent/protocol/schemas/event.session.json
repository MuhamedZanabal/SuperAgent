{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SessionEvent",
  "type": "object",
  "required": ["event", "ts", "session_id", "request_id"],
  "properties": {
    "event": {
      "type": "string",
      "enum": ["session.started", "session.restored", "session.checkpointed"]
    },
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "session_id": {
      "type": "string"
    },
    "request_id": {
      "type": "string"
    },
    "correlation_id": {
      "type": ["string", "null"]
    },
    "checkpoint_id": {
      "type": ["string", "null"]
    },
    "metadata": {
      "type": "object"
    }
  }
}
