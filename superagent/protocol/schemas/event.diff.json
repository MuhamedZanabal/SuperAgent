{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DiffEvent",
  "type": "object",
  "required": ["event", "ts", "session_id", "request_id", "file_path"],
  "properties": {
    "event": {
      "type": "string",
      "enum": ["diff.preview", "diff.applied", "diff.partial_applied", "diff.rollback"]
    },
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "session_id": {
      "type": "string"
    },
    "request_id": {
      "type": "string"
    },
    "correlation_id": {
      "type": ["string", "null"]
    },
    "file_path": {
      "type": "string"
    },
    "diff_content": {
      "type": ["string", "null"]
    },
    "hunks_applied": {
      "type": ["array", "null"],
      "items": {
        "type": "integer"
      }
    },
    "checkpoint_id": {
      "type": ["string", "null"]
    }
  }
}
