{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ToolEvent",
  "type": "object",
  "required": ["event", "ts", "session_id", "request_id", "tool_name"],
  "properties": {
    "event": {
      "type": "string",
      "enum": ["tool.requested", "tool.approved", "tool.rejected", "tool.result"]
    },
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "session_id": {
      "type": "string"
    },
    "request_id": {
      "type": "string"
    },
    "correlation_id": {
      "type": ["string", "null"]
    },
    "tool_name": {
      "type": "string"
    },
    "tool_args": {
      "type": "object"
    },
    "result": {},
    "error": {
      "type": ["string", "null"]
    },
    "requires_consent": {
      "type": "boolean"
    }
  }
}
